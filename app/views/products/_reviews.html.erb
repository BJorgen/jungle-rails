<div>
  <hr>
  <% @product = product %>
  <h4>Review this product</h4>

  <%= form_for :review, url: product_reviews_path(@product) do |form| %>
    <div class="form-group">
      <%= form.label :rating %>
      <%= form.select :rating, [1,2,3,4,5], class: 'form-control' %>
      <br>
      <%= form.label :description %>
      <%= form.text_field :description, class: 'form-control' %>
    </div>

    <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
  <% end %>

  <hr>

  <h3>Reviews</h3>
  <br>
  <% if product.reviews.length == 0 %>
    <p>There are no reviews for this product.</p>
  <% else %>  
    <% product.reviews.all.reverse.each do |review| %>
      <div>rating:<%= review.rating %><br>description: <%= review.description %><br><br></div>
    <% end %>
  <% end %>
  

</div